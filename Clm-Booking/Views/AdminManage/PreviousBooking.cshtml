@model IEnumerable<Clm_Booking.Models.ClientClm>

@{
    ViewBag.Title = "Previous Booking";

    if (Session["email"] == null)
    {
        Response.Redirect("~/Admin/Login");
    }
}

<div style="text-align:center;">
    <h2>Previous Booking</h2>
</div>


@using (Html.BeginForm("PreviousBooking", "AdminManage", FormMethod.Get))
{
<div class="container">
    <div class="form-inline my-2 my-lg-0" style="margin:10px;">
        @*<input class="form-control mr-sm-5" type="search" name="searchClient" placeholder="Search" aria-label="Search">*@
        @Html.TextBox("searchClient", null, new { @class = "form-control",  placeholder="Looking for a Client?"})
        <input type="submit" value="Search" class="btn btn-outline-success my-2 my-sm-0" />
    </div>
</div>
        }
   
    <br />
    <p style="font-size:1.4em; margin:10px;">
        @Html.ActionLink("Back", "Bookings")
    </p>
    <div class="container">


        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.firstname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.lastname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.bookdate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.phonenumber)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.status)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.firstname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.lastname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.bookdate)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.phonenumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.status)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ClientID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ClientID })
                    </td>
                </tr>
            }

        </table>
    </div>

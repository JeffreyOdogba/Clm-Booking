<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">

    <title>@ViewBag.Title</title>
    <style>
        html, body {
            height: 100%;
        }

        .footer {
            margin-top: 50px;
            position: relative;
            width: 100%;
            clear: both;
        }

        .colorWhite {
            color: whitesmoke;
            font-weight: 700;
        }

        a {
            text-decoration:none;
        }
        a:hover{
            color:cadetblue;
        }
    </style>
    @RenderSection("css", false)
</head>
<body>

    <nav class="navbar bg-dark">
        <div class="container-fluid">
            <span class="navbar-brand mb-0 colorWhite" style="font-size:30px; padding: 1.5rem 2rem;">@Html.ActionLink("CLM-WORLD", "Index","Clm_Booking", null,null)</span>


            @if (Session["email"] != null)
            {
                <span class="float-right" style="color:white; float:right; font-weight:600;">
                    @Session["email"]
                    @Html.ActionLink("Logout", "Logout", "Admin", null, new { @class = "btn btn-danger" })
                </span>
            }
        </div>

    </nav>



    <div style="min-height:100%;">
        @RenderBody()
    </div>


    <div class="footer fixed-bottom bg-dark">
        <!-- Copyright -->
        <div class="text-center py-3 colorWhite">
            CLM @DateTime.UtcNow.Year . All Rights Reserved
        </div>
        <!-- Copyright -->
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>
